@{
    ViewData["Title"] = "Finance Overview";
    Layout = "~/Views/Shared/_NoNavbarLayout.cshtml";
}


<h2>Finance Overview</h2>
<p>@ViewData["ErrorMessage"]</p>
<div class="container text-center">
    <div class="row">
        <div class="col">
            <p>Current budget: @ViewData["Budget"]</p>
        </div>
        <div class="col">
            <button class="btn btn-primary">Set new budget</button>
        </div>
        <div class="col">
            <button class="btn btn-primary">Remove budget</button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>Incomes</p>
            <table class="table">
                <thead>Income </thead>
                <thead>Amount</thead>
            </table>
        </div>
        <div class="col">
            <p>Expenses</p>
            <table class="table">
                <thead>Expense</thead>
                <thead>Amount</thead>
            </table>
        </div>
    </div>
</div>