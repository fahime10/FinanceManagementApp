@model FinanceManagementApp.Models.User

@{
    ViewData["Title"] = "Edit user form";
}

<h2>Edit user</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@ViewData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST" action="@Url.Action("EditUser", "User")">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">First name:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="first_name" value="@Model.FirstName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Last name:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="last_name" value="@Model.LastName" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email address:</label>
        <div class="col-sm-6">
            <input type="email" class="form-control" name="email_address" value="@Model.EmailAddress" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="@Url.Action("FinanceOverview", "FinanceOverview")" role="button">Cancel</a>
        </div>
    </div>
</form>

<form action="@Url.Action("DeleteUser", "User", new { id = Model.Id })" method="POST" style="display:inline-block;">
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete your account?');">Delete account</button>
        </div>
    </div>
</form>
